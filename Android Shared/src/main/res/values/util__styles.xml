<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="utils" />

    <style name="utils.ActionBar" />

    <style name="utils.ActionBar.Overlay">
        <item name="android:textColorPrimary">@color/util__white</item>
        <item name="colorControlNormal">@color/util__white</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="utils.ActionBar.Popup">
        <item name="android:background">@color/util__white</item>
        <item name="android:textColor">@color/util__black</item>
    </style>

    <style name="utils.ActionBar.Spinner"
           parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor"
              tools:ignore="NewApi">true
        </item>
    </style>

    <style name="utils.ActionBar.Tabs">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation"
              tools:ignore="NewApi">@dimen/util__headerbar_elevation
        </item>
    </style>

    <style name="utils.ActionBar.Tabs.TabIndicator" />

    <style name="utils.ActionBar.ThemeOverlay"
           parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="utils.Widget" />

    <!-- BUTTON BAR STYLES -->
    <style name="utils.Widget.ButtonBar">
        <item name="negativeButtonIcon">@drawable/ic_action_cancel_black</item>
        <item name="negativeButtonLabel">@android:string/cancel</item>
        <item name="positiveButtonEnabled">false</item>
        <item name="positiveButtonIcon">@drawable/ic_action_tick_black</item>
        <item name="positiveButtonLabel">@android:string/ok</item>
    </style>
    <!-- END BUTTON BAR STYLES -->

    <!-- LABEL EDIT TEXT STYLES -->
    <style name="utils.Widget.FloatLabelBase">
        <item name="util__labelTextSize">@dimen/util__defaultLabelTextSize</item>
        <item name="util__labelTextColor">@color/util__float_label_color</item>
    </style>

    <style name="utils.Widget.FloatLabelTextViewBase">
        <item name="android:imeOptions">actionNext</item>
        <item name="util__inputTextSize">@dimen/util__defaultLabelTextSize</item>
        <item name="util__inputTextColor">@color/util__float_label_color</item>
    </style>

    <style name="utils.Widget.FloatLabelAutoCompleteTextView">
        <item name="android:singleLine">true</item>
    </style>

    <style name="utils.Widget.FloatLabelEditText">
        <item name="android:inputType">text</item>
    </style>
    <!-- END LABEL EDIT TEXT STYLES -->

    <!-- NAVIGATION DRAWER STYLES -->
    <style name="utils.Widget.NavigationDrawer">
        <item name="android:inputType">text</item>
    </style>

    <style name="utils.Widget.NavigationDrawer.Category">
        <item name="android:background">@drawable/list_section_header_holo_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <!--item name="android:paddingStart">8dip</item-->
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="utils.Widget.NavigationDrawer.Item">
        <item name="android:background">?android:attr/activatedBackgroundIndicator</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
    </style>
    <!-- END NAVIGATION DRAWER STYLES -->
</resources>