<resources>
    <!-- BUTTON BAR STYLES -->
    <style name="utils" />

    <style name="utils.Widget" />

    <style name="utils.Widget.ButtonBar">
        <item name="negativeButtonIcon">@drawable/ic_action_cancel_black</item>
        <item name="negativeButtonLabel">@android:string/cancel</item>
        <item name="positiveButtonEnabled">false</item>
        <item name="positiveButtonIcon">@drawable/ic_action_tick_black</item>
        <item name="positiveButtonLabel">@android:string/ok</item>
    </style>
    <!-- END BUTTON BAR STYLES -->

    <!-- NAVIGATION DRAWER STYLES -->
    <style name="utils.Widget.NavigationDrawer">
        <item name="android:background">@color/util__drawer_layout_background_color</item>
        <item name="android:layout_width">240dp</item>
    </style>

    <style name="utils.Widget.NavigationDrawer.Category">
        <item name="android:background">@drawable/list_section_header_holo_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <!--item name="android:paddingStart">8dip</item-->
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="utils.Widget.NavigationDrawer.Item">
        <item name="android:background">@drawable/util__list_selector_holo_dark</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <!-- END NAVIGATION DRAWER STYLES -->
</resources>