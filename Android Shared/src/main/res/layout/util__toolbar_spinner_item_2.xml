<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/util__primary_color">

    <ImageView
        android:id="@+id/spinner_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/util__width_8dp"
        android:layout_marginRight="@dimen/util__width_8dp"
        android:src="@drawable/spinner_triangle"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/util__width_4dp"
        android:paddingLeft="@dimen/util__width_16dp"
        android:paddingRight="@dimen/util__width_4dp"
        android:paddingStart="@dimen/util__width_16dp"
        android:textColor="?attr/util__toolbarSpinnerTextColor"
        android:textSize="@dimen/util__text_size_large"
        android:textStyle="bold"
        tools:ignore="NewApi"
        tools:text="@string/placeholder_lorem_ipsum" />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@android:id/text1"
        android:layout_alignStart="@android:id/text1"
        android:layout_below="@android:id/text1"
        android:paddingEnd="@dimen/util__width_4dp"
        android:paddingLeft="@dimen/util__width_16dp"
        android:paddingRight="@dimen/util__width_4dp"
        android:paddingStart="@dimen/util__width_16dp"
        android:textColor="?attr/util__toolbarSpinnerTextColorSecondary"
        android:textSize="@dimen/util__text_size_medium"
        android:textStyle="bold"
        tools:ignore="NewApi"
        tools:text="@string/placeholder_lorem_ipsum" />

</RelativeLayout>